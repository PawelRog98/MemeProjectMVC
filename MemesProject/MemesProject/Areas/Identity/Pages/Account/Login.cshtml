@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <div class="center-large shadow-full Padding-20">
    <div class="justify-content-center text-center">
        <section>
            <form id="account" method="post">
                 <h4>Zaloguj się</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                   
                        <!--<label class="offset-2 col-sm-2 col-form-label text-left" asp-for="Input.Email"></label>-->
                   <div class="offset-2 col-sm-2 col-form-label text-left">
                       Email
                   </div>
                    <div class="col-4">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
        
                    </div>
                    <br/>
                <div class="form-group row">
                    <!--<label class="offset-2 col-sm-2 col-form-label  text-left" asp-for="Input.Password"></label>-->
                    <div class="offset-2 col-sm-2 col-form-label text-left">
                       Hasło
                   </div>
                    <div class="col-4">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group ">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                Zapamiętaj mnie
                            </label>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <br/>
                    <div class="form-group Buttons-Row Padding-LR30">
                        <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Nie otrzymałem potwierdzenia</a>
                    </p>
                    </div>
</form>
        </section>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
