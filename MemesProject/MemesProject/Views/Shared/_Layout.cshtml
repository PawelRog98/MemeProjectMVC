                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MemesProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

    $('#WCAGColorButton').click(function(){
    $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('setblackyelow');
    $('#WCAGColorButton').prop('disabled', true );
    $('#WCAGColorButton2').prop('disabled', false );

        $('.favouriteImage').attr('src','/images/like.png').toggleClass("setblackyelow")
        $('.UnfavouriteImage').attr('src','/images/likeFull.png').toggleClass("setblackyelow")

        $('.likeImage').attr('src','/images/heartEmpty.png').toggleClass("setblackyelow")
        $('.UnLikeImage').attr('src','/images/heart.png').toggleClass("setblackyelow")

        $('.BaseEdit').attr('src','/images/icons8-edit-96.png').toggleClass("setblackyelow")
        $('.BaseDetails').attr('src','/images/icons8-comments-96.png').toggleClass("setblackyelow")
        $('.BaseDelete').attr('src','/images/icons8-trash-96.png').toggleClass("setblackyelow")
    });

    $('#WCAGColorButton2').click(function(){
    $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('setblackyelow');
    $('#WCAGColorButton').prop('disabled', false );
    $('#WCAGColorButton2').prop('disabled', true );

        $('.favouriteImage').attr('src','/images/likeyellow.png').toggleClass("setblackyelow")
        $('.UnfavouriteImage').attr('src','/images/likeyellowfull.png').toggleClass("setblackyelow")

        $('.likeImage').attr('src','/images/heartEmptyyellow.png').toggleClass("setblackyelow")
        $('.UnLikeImage').attr('src','/images/heartyellow.png').toggleClass("setblackyelow")

        $('.BaseEdit').attr('src','/images/edityellow.png').toggleClass("setblackyelow")
        $('.BaseDetails').attr('src','/images/commentyellow.png').toggleClass("setblackyelow")
        $('.BaseDelete').attr('src','/images/trashyellow.png').toggleClass("setblackyelow")   
    });

    $('#WCAGFontSizeMinButton').click(function(){
    $('h1, a, div, button, ul, li, body, input, nav, select, option').addClass('SetFontSizeMin');
    if ($('h1, a, div, button, ul, li, body, input, nav, select, option').hasClass('SetFontSizeMed'))
    {
       $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('SetFontSizeMed')
    }
    if ($('h1, a, div, button, ul, li, body, input, nav, select, option').hasClass('SetFontSizeMax'))
    {
       $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('SetFontSizeMax')
    }
    });

    $('#WCAGFontSizeMedButton').click(function(){
    $('h1, a, div, button, ul, li, body, input, nav, select, option').addClass('SetFontSizeMed');
    if ($('h1, a, div, button, ul, li, body, input, nav, select, option').hasClass('SetFontSizeMin'))
    {
       $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('SetFontSizeMin')
    }
    if ($('h1, a, div, button, ul, li, body, input, nav, select, option').hasClass('SetFontSizeMax'))
    {
       $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('SetFontSizeMax')
    }
    });

    $('#WCAGFontSizeMaxButton').click(function(){
    $('h1, a, div, button, ul, li, body, input, nav, select, option').addClass('SetFontSizeMax');
    if ($('h1, a, div, button, ul, li, body, input, nav, select, option').hasClass('SetFontSizeMed'))
    {
       $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('SetFontSizeMed')
    }
    if ($('h1, a, div, button, ul, li, body, input, nav, select, option').hasClass('SetFontSizeMin'))
    {
       $('h1, a, div, button, ul, li, body, input, nav, select, option').toggleClass('SetFontSizeMin')
    }
    });


    </script>

       <script>


      $(document).ready(function(){
  $(".likeImage, .UnLikeImage").click(function(){

   var $img = $(this);
   var memeId = $img.attr("id");

         $.ajax({  
                url: "/Memes/FavouriteMeme?memeId="+memeId,  
                contentType: "application/json; charset=utf-8",  
                dataType: "text",  
                success: function(response) {  
                    if (response != null) {  


                if($img.hasClass('likeImage'))
                {
                    if( $img.hasClass('setblackyelow'))
                    {
                        $img.attr('src', '/images/heartyellow.png').removeClass("likeImage").addClass("UnLikeImage").removeAttr('title').attr('title','Remove an image from Favourites');
                    }
                    else
                    {
                        $img.attr('src', '/images/heart.png').removeClass("likeImage").addClass("UnLikeImage").removeAttr('title').attr('title','Remove an image from Favourites');
                    }
                }
                else
                {

                    if( $img.hasClass('setblackyelow'))
                    {
                        $img.attr('src', '/images/heartEmptyyellow.png').removeClass("UnLikeImage").addClass("likeImage").removeAttr('title').attr('title','Add an image to Favourites');
                    }
                    else
                    {
                        $img.attr('src', '/images/heartEmpty.png').removeClass("UnLikeImage").addClass("likeImage").removeAttr('title').attr('title','Add an image to Favourites');
                    }
                }
                } else {  
                   
                }  
                },  
                failure: function(response) {  
                    
                },  
                error: function(response) {  
            
                }  
            });
    
  });
});
        
   </script>
   <script>
        $(document).ready(function(){
  $(".favouriteImage, .UnfavouriteImage").click(function(){

   var $img = $(this);
   var memeId = $img.attr("id");
         $.ajax({  
                url: "/Memes/LikeMeme?memeId="+memeId,  
                type:"GET", 
                contentType: "application/json; charset=utf-8",  
                dataType: "text",  
                success: function(response) {  
                    if (response != null) {  

                if($img.hasClass('favouriteImage')){
                         if( $img.hasClass('setblackyelow'))
                         {
                             $img.attr('src', '/images/likeyellowFull.png').removeClass("favouriteImage").addClass("UnfavouriteImage").removeAttr('title').attr('title','UnLike Image');
                         }
                         else
                         {
                             $img.attr('src', '/images/likeFull.png').removeClass("favouriteImage").addClass("UnfavouriteImage").removeAttr('title').attr('title','UnLike Image');
                         }
                         var $numberofLikes = $("[id='numberLike "+memeId+"']");
                         var likes = $numberofLikes.text();
                         let num = parseInt(likes);
                         num+=1;
                        $numberofLikes.text(num);
                }else{
                         if( $img.hasClass('setblackyelow'))
                         {
                             $img.attr('src', '/images/likeyellow.png').removeClass("UnfavouriteImage").addClass("favouriteImage").removeAttr('title').attr('title','Like Image');
                         }
                         else
                         {
                             $img.attr('src', '/images/like.png').removeClass("UnfavouriteImage").addClass("favouriteImage").removeAttr('title').attr('title','Like Image');
                       
                         }
                          var $numberofLikes = $("[id='numberLike "+memeId+"']");
                         var likes = $numberofLikes.text();
                         let num = parseInt(likes);
                         num-=1;
                        $numberofLikes.text(num);
                }
                    } else {  
                   
                    }  
                },  
                failure: function(response) {  
                    
                },  
                error: function(response) {  
            
                } 
            });
    
      });
    });

   $(function() {
    $('#categoriesList').change(function() {
        if( $(this).val()==null)  return;

   
       var  url = 'Memes/category/'+ $(this).val();

                if(window.location.href.includes('Memes/category/')){
          var url=$(this).val();
       }
        if (url != null && url != '' ) {
                    $(location).removeAttr("href");
           $(location).attr('href',url);
        }
    });

});
   </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
