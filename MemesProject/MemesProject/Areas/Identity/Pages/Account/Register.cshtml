@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="center-large shadow-full Padding-20">
<div class="justify-content-center text-center">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
       <h2>Zarejestruj się.</h2>
        <hr />
        <div class="row">
        <div class="col-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <!--<label asp-for="Input.Email" class="offset-2 col-sm-2 col-form-label text-left"></label>-->
            <div class="offset-2 col-sm-4 col-form-label text-left">
                Email:
            </div>
            <div class="col-6">
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
             <br />
         <div class="form-group row">
            <!--<label asp-for="Input.Username" class="offset-2 col-sm-2 col-form-label text-left"></label>-->
            <div class="offset-2 col-sm-4 col-form-label text-left">
                Nazwa użytkownika:
            </div>
            <div class="col-6 Padding-TB10" >
                <input asp-for="Input.Username" class="form-control"/>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
        </div>
          <br />
        <div class="form-group row">
            <!--<label asp-for="Input.Password" class="offset-2 col-sm-2 col-form-label text-left"></label>-->
            <div class="offset-2 col-sm-4 col-form-label text-left">
                Hasło:
            </div>
            <div class="col-6">
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
          <br />
        <div class="form-group row">
            <!--<label asp-for="Input.ConfirmPassword" class="offset-2 col-sm-2 col-form-label text-left"></label>-->
            <div class="offset-2 col-sm-4 col-form-label text-left">
                Potwierdz Hasło:
            </div>
            <div class="col-6 Padding-TB10">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        </div>
        <div class="col-6">
        <div class="form-group row align-items-center">
            <div class="col-2">

            </div>
            <label asp-for="Input.AvatarImage" class="col-sm-2 col-form-label text-left"></label>
            <div class="col-6">
                <div class="custom-file">
                    <input title="Choose Image" asp-for="Input.AvatarImage" class="custom-file-input form-control" id="customFile" accept="image/png, image/jpeg" />
                    <label class="custom-file-label text-left">Click to change image</label>
                </div>
            </div>
            <div class="col-6">
                 <img style="vertical-align: middle;width:120px;height:120px;border-radius:50%" id="image" class="rounded-circle img-thumbnail avatar" src="~/Images/defaultImage.jpg" alt="Default User Avatar" />
           
            </div>
        </div>
        </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
</div>
